<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#99ECECEC"
                android:centerY="0.75"
                android:endColor="#ffECECEC"
                android:startColor="#77ECECEC" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#80F5BF64"
                    android:centerY="0.75"
                    android:endColor="#a0F5BF64"
                    android:startColor="#80F5BF64" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:endColor="#F5BF64"
                    android:startColor="#F5BF64" />
            </shape>
        </clip>
    </item>
</layer-list>
